doctype
html
  head 
    meta(lang="en" dir="ltr")
    title Cartography
    //- link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway|Sunflower:300|Titillium+Web")
    link(rel="stylesheet" href="/static/css/main.css")
  
  body
    div(class="container")
      div(id="map-container" class="full-h container center scroll")
        include ../public/svg/countries_lowres.svg
        
    div(id="list-container" class="full-h container vertical")
      h2 Your Map
      ol(id="country-list")  
      div(class="container vertical")
        button(id="submit" onclick="postJourney()") SUBMIT
        div(class="container")
          button(id="undo" onclick="popCountry()") UNDO
          button(id="reset" onclick="resetView()") RESET
        a(id="download" style="display:none")
    div(id="test" data-test=test style="display:none")

    script(src="/static/js/main.js") 
